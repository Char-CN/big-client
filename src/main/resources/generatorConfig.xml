<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >

<generatorConfiguration>
    <!-- 通过这个属性指定驱动的路径 -->
    <classPathEntry location="/Users/hyy/.m2/repository/mysql/mysql-connector-java/5.1.39/mysql-connector-java-5.1.39.jar"/>

    <!-- context 至少需要一个，指定生成一组对象的环境，例如指定要连接的数据库，要生成对象的类型和要处理的数据库中的表等 -->
    <context id="context1" targetRuntime="MyBatis3">
        <!-- 代码中可以包含**注释信息** -->
        <commentGenerator>
            <!-- 阻止生成注释 -->
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <!-- 用于指定数据库连接信息 -->
        <jdbcConnection driverClass="${jdbc.driverClass}"
                        connectionURL="${jdbc.url}"
                        userId="${jdbc.user}"
                        password="${jdbc.password}">
        </jdbcConnection>

        <!-- 用来指定JDBC类型和Java类型如何转换 -->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!-- 控制生成的实体类 -->
        <javaModelGenerator targetPackage="${targetModelPackage}" targetProject="${targetJavaProject}">
            <!-- 如果true，MBG会根据catalog和schema来生成子包。如果false就会直接用targetPackage属性。默认为false。 -->
            <property name="enableSubPackages" value="true"/>
        </javaModelGenerator>

        <!-- 控制生成XML的SQL映射文件和实体类 -->
        <sqlMapGenerator targetPackage="${targetXMLPackage}" targetProject="${targetResourcesProject}">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!-- 配置该元素，会生成Mapper接口 -->
        <!-- <javaClientGenerator targetPackage="${targetMapperPackage}" targetProject="${targetJavaProject}" type="ANNOTATEDMAPPER"> -->
        <javaClientGenerator targetPackage="${targetMapperPackage}" targetProject="${targetJavaProject}" type="XMLMAPPER">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <!-- 配置要通过内省的表。只有配置的才会生成实体类和其他文件 -->
        <!--<table schema="dw_dataservice"-->
               <!--tableName="ds_config"-->
               <!--enableCountByExample="false"-->
               <!--enableSelectByExample="false"-->
               <!--enableInsert="false"-->
               <!--enableUpdateByExample="false"-->
               <!--enableDeleteByExample="false"-->
               <!--selectByExampleQueryId="false"/>-->
        <table tableName="%" >
            <!-- 用来指定自动生成主键的属性（identity字段或者sequences序列） -->
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
        </table>
    </context>
</generatorConfiguration>